{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "tsconfig.json",
    ".eslintrc.json"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "outputMode": "hash-only"
    },
    "stub": {
      "dependsOn": ["^stub"],
      "cache": false
    }
  }
}
